{
    "name": "pboivin/flou",
    "description": "PHP image lazy loading toolbox for prototypes and static sites.",
    "keywords": ["php", "images", "lazy", "loading", "lqip", "glide"],
    "homepage": "https://github.com/pboivin/flou",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/pboivin/flou/issues",
        "source": "https://github.com/pboivin/flou"
    },
    "authors": [
        {
            "name": "Patrick Boivin",
            "email": "pboivin@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "league/glide": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "laravel/pint": "^1.1",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Pboivin\\Flou\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pboivin\\Flou\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "test-coverage": [
            "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html tests/__coverage__"
        ],
        "analyse": [
            "@php vendor/bin/phpstan analyse"
        ],
        "format": [
            "@php vendor/bin/pint"
        ]
    }
}
